{
  "name": "package-publishing-using-lerna-yarn-jest-typescript",
  "description": "Package development and Publishing using lerna with yarn workspaces.",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "scripts": {
    "prerelease": "lerna run build",
    "release": "cross-env HUSKY_BYPASS=true lerna publish",
    "release:conv": "lerna run build && cross-env HUSKY_BYPASS=true lerna publish --conventional-commits --yes"
  },
  "husky": {
    "hooks": {
      "commit-msg": "[[ -n $HUSKY_BYPASS ]] || commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "workspaces": [
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SeyyedKhandon/yarn_lerna_jest_typescript.git"
  },
  "author": "SeyyedMahdi hassanpour",
  "bugs": {
    "url": "https://github.com/SeyyedKhandon/yarn_lerna_jest_typescript/issues"
  },
  "homepage": "https://github.com/SeyyedKhandon/yarn_lerna_jest_typescript#readme",
  "keywords": [
    "yarn workspaces",
    "lerna managing JavaScript projects with multiple packages",
    "jest testing",
    "unit test",
    "multiple packages development"
  ],
  "devDependencies": {
    "@commitlint/cli": "^9.0.1",
    "@commitlint/config-conventional": "^9.0.1",
    "@types/jest": "^26.0.3",
    "@types/node": "^14.0.14",
    "@typescript-eslint/eslint-plugin": "^3.5.0",
    "@typescript-eslint/parser": "^3.5.0",
    "cross-env": "^7.0.2",
    "eslint": "^7.4.0",
    "eslint-config-airbnb-base": "^14.2.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.0",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "lerna": "^3.22.1",
    "prettier": "2.0.5",
    "ts-jest": "^26.1.1",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.5"
  }
}
